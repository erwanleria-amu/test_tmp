{% extends 'base.html.twig' %}
{% set i = 1 %}
{% block body %}
    <div class="mdl-grid">
        <div class = "mdl-cell mdl-cell--4-col">
            {% include 'community/includes/user-profile.html.twig' %}
        </div>
        <div class = "mdl-cell mdl-cell--8-col">
            <p class="section-title">Favoris</p>
            <div id="favoris">
                <table class="mdl-data-table mdl-js-data-table" width="100%">
                    <thead>
                    <tr>
                        <th class="mdl-data-table__cell--non-numeric ">Nom</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Météo actuelle</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                        {% for favorite in user.favorites %}
                             <tr>
                                 <td>{{ favorite.name }}</td>
                                 <td>{{ favorite.lat }}</td>
                                 <td>{{ favorite.lon }}</td>
                                 <td id="favorite{{ i }}"></td>
                                 <td>
                                    <a title="Voir" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary mdl-button--icon"
                                        href="{{ path('app-coordinates', {'lat': favorite.lat, 'lon': favorite.lon }) }}">
                                         <i class="material-icons">arrow_right_alt</i>
                                     </a>
                                    <button title="Supprimer" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary mdl-button--icon removeFavorite" data-id="{{ favorite.id }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer ce favori?');">
                                        <i class="material-icons">clear</i>
                                    </button>
                                 </td>
                             </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
